@using System.Data
@using teaCRM.Entity
@using teaCRM.Web.Helpers
@{
    //模块信息
    var myApps = (List<VMyappCompany>) ViewBag.MyApps;

    //客户扩展字段信息
    var customerFields = (List<teaCRM.Entity.TFunExpand>) ViewBag.CustomerExpandFields;
